// Exercise 6

function getLargestNumber(a, b){
    if(a > b || a < b ){
        result = `pls pass my leargest value ${a>b} is ${a} `
    }else{
        result = `and lowest value ${a<b} is ${b}`
    }
    return result
}

getLargestNumber(10, 5)
console.log(result)  // output : pls pass my leargest value true is 10

